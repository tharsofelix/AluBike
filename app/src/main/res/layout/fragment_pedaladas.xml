<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.pedaladas.PedaladasFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="126dp"
        android:layout_height="38dp"
        android:layout_marginStart="142dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="143dp"
        android:text="Pedaladas"
        android:textAlignment="center"
        android:textColor="#142478"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="315dp"
        android:layout_height="54dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="48dp"
        android:text="Confira aqui o seu histórico de locação na AluBike "
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="375dp"
        android:layout_height="468dp"
        android:layout_marginTop="60dp"
        android:stretchColumns="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <TableRow>

            <TextView
                android:layout_column="1"
                android:padding="10dip"
                android:text="Sua viagem de segunda-feira 30/05"
                android:textSize="16sp" />

            <TextView
                android:gravity="right"
                android:padding="10dip"
                android:text="45 min" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="1"
                android:padding="10dip"
                android:text="Sua viagem de quarta-feira 31/05"
                android:textSize="16sp" />

            <TextView
                android:gravity="right"
                android:padding="10dip"
                android:text="37 min" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="217dp"
                android:layout_height="39dp"
                android:layout_column="1"
                android:padding="10dip"
                android:text=" Sua viagem de quinta-feira 01/06"
                android:textSize="16sp" />

            <TextView
                android:gravity="right"
                android:padding="10dip"
                android:text="19 min" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="217dp"
                android:layout_column="1"
                android:padding="10dip"
                android:text=" Sua viagem de sexta-feira 02/06"
                android:textSize="16sp" />

            <TextView
                android:gravity="right"
                android:padding="10dip"
                android:text="38 min" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="217dp"
                android:layout_column="1"
                android:padding="10dip"
                android:text=" Sua viagem de Sábado 03/06"
                android:textSize="16sp" />

            <TextView
                android:gravity="right"
                android:padding="10dip"
                android:text="22 min" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="217dp"
                android:layout_column="1"
                android:padding="10dip"
                android:text=" Sua viagem de Domingo 04/06"
                android:textSize="16sp" />

            <TextView
                android:gravity="right"
                android:padding="10dip"
                android:text="25 min" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="217dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:padding="10dip"
                android:text=" Sua viagem de segunda-feira 05/06"
                android:textSize="16sp" />

            <TextView
                android:gravity="right"
                android:padding="10dip"
                android:text="42 min" />

        </TableRow>

        <View
            android:layout_height="5dip"
            android:background="#FF909090" />

    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>





